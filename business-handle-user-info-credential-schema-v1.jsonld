      "type": "string",
      "format": "uri"
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 3,
      "uniqueItems": true
    },
    "issuer": {
      "type": "string"
    },
    "identifier": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    }
